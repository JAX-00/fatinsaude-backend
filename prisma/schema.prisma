generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model District {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  hospitals Hospital[]
}

model Hospital {
  id            Int @id @default(autoincrement())
  name          String
  image         String?
  latitude      Float
  longitude     Float
  phone         String?
  emergency     Boolean @default(false)
  ambulance     String?
  diseases      Json?
  operationTime String?
  type          HospitalType?
  districtId    Int
  district      District @relation(fields: [districtId], references: [id])

  @@unique([name, districtId])
}

enum HospitalType {
  HOSPITAL
  CLINIC
  CENTRO
  APOTIK
}
